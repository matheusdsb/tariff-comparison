{
  "name": "tariff-comparison",
  "version": "1.0.0",
  "description": "A simple application that receives as input the annual consumption of the user (in KWh) and shows  how much would cost (in Euros) each of the available products",
  "main": "dist/app.js",
  "scripts": {
    "start": "tsc && node dist/app.js",
    "start-test-watch": "tsc && node dist/app.js && ./node_modules/ts-mocha/bin/ts-mocha -p ./tsconfig.json ./**/*.test.ts -w --watch-extensions ts",
    "test": "nyc mocha '**/*.test.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matheusdsb/tariff-comparison.git"
  },
  "author": "Matheus Dias Sabino",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/matheusdsb/tariff-comparison/issues"
  },
  "homepage": "https://github.com/matheusdsb/tariff-comparison#readme",
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "mocha": "^10.2.0",
    "nyc": "^15.0.0",
    "ts-mocha": "^6.0.0",
    "typescript": "^3.7.4"
  }
}
